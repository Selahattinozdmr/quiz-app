generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Teacher{
  id Int @id @default(autoincrement())
  userId Int? @unique @default(1)

}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String @unique
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  name String @default("Ahmet")
  surname String @default("Ã–zdemir")
  classId Int? @default(1) 
  class Class? @relation(fields: [classId],references: [id])
  
}
model Class{
  id Int @id @default(autoincrement())
  class String @unique
  users User[]
  teacherId Int? 
}
model Question{
  id Int @id @default(autoincrement())
  question String @db.VarChar(1000)
  answerA String @db.VarChar(1000)
  answerB String @db.VarChar(1000)
  answerC String @db.VarChar(1000)
  answerD String @db.VarChar(1000)
  correctAnswer String
  file1 String? @db.VarChar(1000)//new for image or audio 
  content String? @db.VarChar(1000)//new for text
  subCategoryId Int?
  categoryId Int?
}
model SubCategory{
  id Int @id @default(autoincrement())
  name String
  title String
  categoryId Int
  isChecked Boolean @default(false)

}
model Category{
  id Int @id @default(autoincrement())
  name String
  title String?
}
model Quiz{
  id Int @id @default(autoincrement())
  TeacherId Int
  questionId Json
  date DateTime @default(now())
  isApproved Boolean @default(false)
  className1 String @default("4-A")
  dedline DateTime  @db.DateTime()  
  sumQuestion Int @default(0)
  quizUser QuizUser[]
}
model QuizUser{
  id Int @id @default(autoincrement())
  userId Int 
  quiz Quiz @relation(fields: [quizId], references: [id])
  quizId Int
  isCompleted Boolean @default(false)
  trueAnswer Int @default(0)
  falseAnswer Int @default(0)
}

model HomeWork{
  id Int @id @default(autoincrement())
  title String
  isCompleted Boolean @default(false)
  userId Int @default(5)
  teacherId Int
  date DateTime @default(now())
}

